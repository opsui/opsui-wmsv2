{
  "name": "erp-code-quality-check",
  "description": "Comprehensive code quality analysis: types, complexity, duplicates, unused code",
  "parameters": {
    "type": "object",
    "properties": {
      "projectPath": {
        "type": "string",
        "default": "./packages/backend"
      },
      "fixIssues": {
        "type": "boolean",
        "default": false,
        "description": "Automatically fix fixable issues"
      }
    }
  },
  "steps": [
    {
      "name": "check_typescript_errors",
      "tool": "mcp://erp-dev-accelerator/analyze_typescript_errors",
      "arguments": {
        "projectPath": "{{projectPath}}"
      }
    },
    {
      "name": "find_unused_exports",
      "tool": "mcp://erp-dev-accelerator/analyze_unused_exports",
      "arguments": {
        "projectPath": "{{projectPath}}"
      }
    },
    {
      "name": "check_code_complexity",
      "tool": "mcp://erp-dev-accelerator/analyze_code_complexity",
      "arguments": {
        "projectPath": "{{projectPath}}",
        "threshold": 10
      }
    },
    {
      "name": "find_duplicate_code",
      "tool": "mcp://erp-dev-accelerator/find_duplicate_code",
      "arguments": {
        "projectPath": "{{projectPath}}"
      }
    },
    {
      "name": "validate_project_structure",
      "tool": "mcp://erp-dev-accelerator/validate_project_structure",
      "arguments": {
        "projectPath": "{{projectPath}}"
      }
    }
  ]
}
