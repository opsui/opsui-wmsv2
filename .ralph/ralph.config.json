{
  "version": "1.0",
  "description": "Ralph skills for ERP project with Cline + GLM 4.7 + MCP integration",
  "skillsDirectory": "./.ralph/skills",
  "mcpServers": {
    "erp-dev-accelerator": {
      "enabled": true,
      "priority": 1
    }
  },
  "workflows": {
    "quick-entity": "erp-entity-generator",
    "prisma-workflow": "erp-prisma-workflow",
    "api-contract": "erp-api-contract-validator",
    "erp-opt": "erp-optimizer",
    "quality-check": "erp-code-quality-check",
    "full-feature": "erp-full-feature-workflow"
  },
  "integrations": {
    "cline": {
      "enabled": true,
      "autoApprove": [
        "analyze_typescript_errors",
        "analyze_project_structure",
        "validate_project_structure"
      ]
    },
    "glm": {
      "enabled": true,
      "model": "glm-4.7",
      "temperature": 0.3
    }
  }
}
