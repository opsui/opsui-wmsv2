      ],
      "env": {
        "WMS_WORKSPACE_ROOT": "C:\\Users\\Heinricht\\Documents\\Warehouse Management System"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\Users\\Heinricht\\Documents\\Warehouse Management System"
      ]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "YOUR_GITHUB_TOKEN_HERE"
      }
    },
    "postgres": {
      "command": "npx",
