{
  "name": "opsui",
  "version": "1.0.0",
  "description": "OpsUI - Production-ready Enterprise Resource Planning (ERP) System with real-time operations management (Accounting, HR, Sales, Purchasing, Manufacturing, Projects, Inventory, E-commerce)",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/start-dev.js",
    "dev:start": "node scripts/start-dev.js",
    "dev:stop": "node scripts/stop-dev.js",
    "dev:restart": "node scripts/restart-dev.js",
    "dev:safe": "node scripts/safe-dev.js",
    "dev:smart": "node scripts/smart-dev.js",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:monitor": "node scripts/keep-alive.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:monitor\"",
    "build": "npm run build -ws --if-present",
    "test": "npm run test -ws --if-present",
    "test:unit": "npm run test:unit -ws --if-present",
    "test:integration": "vitest --config packages/frontend/vitest.config.ts --run src/test/integration",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:headed": "npx playwright test --headed",
    "test:watch": "node scripts/test-watch.js",
    "test:watch:backend": "node scripts/test-watch.js backend",
    "test:watch:frontend": "node scripts/test-watch.js frontend",
    "test:coverage": "npm run test:coverage -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "lint:fix": "npm run lint:fix -ws --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "npm run format",
    "typecheck": "npm run typecheck -ws --if-present",
    "type-check": "npm run typecheck",
    "check:unused": "npm run clean:code",
    "clean:code": "ts-prune --ignore unknown",
    "prepare": "husky install || true",
    "precommit": "npm run format && npm run lint:fix && npm run type-check && npm test",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "db:reset": "npm run db:reset --workspace=packages/backend",
    "db:clean": "node scripts/data-manager.js clean",
    "db:status": "node scripts/data-manager.js status",
    "db:refresh": "node scripts/data-manager.js refresh",
    "data": "node scripts/data-manager.js",
    "db": "node scripts/db",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "ci": "npm run lint && npm run type-check && npm run build && npm test",
    "pattern": "tsx scripts/pattern-cli.ts",
    "pattern:watch": "tsx scripts/watch-patterns.ts",
    "perf": "node scripts/perf-monitor.js",
    "analyze": "npm run build:analyze --workspace=packages/frontend",
    "deps": "npm run deps:check",
    "deps:update": "npm run deps:update",
    "deps:check": "npx npm-check-updates",
    "mcp:monitor": "node scripts/mcp-health-monitor.js",
    "mcp:start": "npm run mcp:monitor",
    "mcp:dev": "cd tools/mcp-server && npm run dev",
    "mcp:build": "cd tools/mcp-server && npm run build",
    "mcp:test": "node scripts/test-mcp-recovery.js",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "test:frontend:ui": "npm run test:ui --workspace=packages/frontend",
    "test:frontend:coverage": "npm run test:coverage --workspace=packages/frontend",
    "test:connection": "node scripts/validate-connection.js",
    "test:validate": "node scripts/pre-completion-checklist.js",
    "test:all": "npm run test --workspaces && npm run test:integration && npm run test:validate",
    "dev:setup": "node scripts/dev-helper.js --setup",
    "dev:helper": "node scripts/dev-helper.js",
    "dev:start:no-browser": "node scripts/dev-helper.js --no-browser",
    "dev:robust": "node scripts/robust-dev.js",
    "dev:guaranteed": "node scripts/robust-dev.js",
    "generate:component": "node scripts/code-generator.js component",
    "generate:api": "node scripts/code-generator.js api",
    "generate:test": "node scripts/code-generator.js test",
    "db:indexes": "cd packages/backend && node dist/db/indexes.js",
    "analyze:code": "node scripts/code-analyzer.js",
    "analyze:fix": "node scripts/code-analyzer.js --fix",
    "prompt": "node tools/prompt-optimizer.mjs",
    "crawl": "cd ai-loop && npx playwright test crawl.spec.ts --reporter=list",
    "crawl:test-mode": "cd ai-loop && TEST_MODE=true npx playwright test crawl.spec.ts --reporter=list",
    "crawl:normalize": "cd ai-loop && npx tsx normalize-errors.ts",
    "crawl:all": "npm run crawl && npm run crawl:normalize",
    "crawl:fix": "cd ai-loop && npx tsx auto-fix.ts",
    "crawl:check": "cd ai-loop && npx tsx health-check.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^1.7.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "ts-prune": "^0.10.3",
    "ts-unused-exports": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "dotenv": "^17.2.3",
    "recharts": "^3.6.0",
    "uuid": "^13.0.0"
  }
}
