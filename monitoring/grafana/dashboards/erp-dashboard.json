# WMS Dashboard for Grafana
# Main monitoring dashboard for Warehouse Management System

{
  "dashboard": {
    "title": "WMS Production Dashboard",
    "tags": ["wms", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"wms-backend\"}[5m])",
            "legendFormat": "{{method}} {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Response Time (P95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"wms-backend\"}[5m]))",
            "legendFormat": "P95 latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"wms-backend\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"wms-backend\"}[5m])",
            "legendFormat": "Error rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.01],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              }
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "count(wms_active_users)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Order Queue Depth",
        "type": "gauge",
        "gridPos": { { "x": 18, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "wms_order_queue_depth"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 500,
            "unit": "orders"
          }
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [100],
                "type": "gt"
              }
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Database Connection Pool",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 16, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"wms_db\"} / pg_settings_max_connections * 100"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 7,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": { "x": 8, "y": 16, "w": 16, "h": 8 },
        "targets": [
          {
            "expr": "pg_stat_statements_mean_exec_time{datname=\"wms_db\"}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      },
      {
        "id": 8,
        "title": "Redis Cache Hit Rate",
        "type": "stat",
        "gridPos": { "x": 16, "y": 16, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "redis_keyspace_hits / (redis_keyspace_hits + redis_keyspace_misses) * 100"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 9,
        "title": "Pod CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"production\",pod=~\"backend-.*\"}[5m])"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 10,
        "title": "Pod Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{namespace=\"production\",pod=~\"backend-.*\"} / 1024 / 1024 / 1024"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "GB"
          }
        }
      },
      {
        "id": 11,
        "title": "Orders by Status",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "count by (status) (wms_orders_total)"
          }
        ]
      },
      {
        "id": 12,
        "title": "Orders Throughput",
        "type": "stat",
        "gridPos": { "x": 12, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "increase(wms_orders_completed_total[1h])"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "opsph"
          }
        }
      },
      {
        "id": 13,
        "title": "Average Pick Time",
        "type": "graph",
        "gridPos": { "x": 18, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, wms_pick_duration_seconds_bucket[5m])"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 14,
        "title": "Node CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 40, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) by (node)"
          }
        ]
      },
      {
        "id": 15,
        "title": "Node Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 40, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100"
          }
        ]
      },
      {
        "id": 16,
        "title": "Alerts Summary",
        "type": "stat",
        "gridPos": { "x": 0, "y": 48, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})"
          }
        ]
      },
      {
        "id": 17,
        "title": "Uptime",
        "type": "stat",
        "gridPos": { "x": 8, "y": 48, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "time() - min(process_start_time_seconds{job=\"wms-backend\"})"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 0
          }
        }
      }
    ]
  }
}