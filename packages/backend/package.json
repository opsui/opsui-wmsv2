{
  "name": "@opsui/backend",
  "version": "1.0.0",
  "description": "OpsUI Backend API - Warehouse Operations Management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:fast": "tsx watch src/index.ts",
    "build": "tsc || exit 0",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --ignore-pattern 'src/db/**'",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check:unused": "ts-unused-exports tsconfig.json",
    "db:migrate": "node dist/db/migrate.js",
    "db:seed": "node dist/db/seed.js",
    "db:reset": "node dist/db/reset.js",
    "db:check:current-view": "tsx src/db/check-current-view-columns.ts",
    "db:test:current-view-api": "tsx src/db/test-current-view-api.ts",
    "db:activate-pickers": "tsx src/db/check-and-activate-pickers.ts",
    "db:fix-timezone": "npx tsx src/db/fix-timezone-column.ts",
    "migrate:phase3": "node scripts/migrate-003.js",
    "migrate:phase2": "tsx src/db/run-migrations.ts",
    "db:migrate:all": "node scripts/run-migrations.cjs"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.450.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "2.6.9",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/web-push": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0"
  }
}
