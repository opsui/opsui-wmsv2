{
  "name": "@opsui/backend",
  "version": "1.0.0",
  "description": "OpsUI Backend API - Warehouse Operations Management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:fast": "tsx watch src/index.ts",
    "build": "sh -c 'tsc || true'",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "node dist/db/migrate.js",
    "db:seed": "node dist/db/seed.js",
    "db:reset": "node dist/db/reset.js",
    "db:check:current-view": "tsx src/db/check-current-view-columns.ts",
    "db:test:current-view-api": "tsx src/db/test-current-view-api.ts",
    "db:activate-pickers": "tsx src/db/check-and-activate-pickers.ts",
    "db:fix-timezone": "npx tsx src/db/fix-timezone-column.ts",
    "migrate:phase3": "node scripts/migrate-003.js",
    "migrate:phase2": "tsx src/db/run-migrations.ts",
    "db:migrate:all": "node scripts/run-migrations.cjs",
    "db:health": "tsx src/db/run-migrations.ts verify",
    "migrate:addon-modules": "tsx src/db/run-addon-modules-migration.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.450.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.68.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.210.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.210.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.210.0",
    "@opentelemetry/instrumentation-express": "^0.58.0",
    "@opentelemetry/instrumentation-http": "^0.210.0",
    "@opentelemetry/instrumentation-pg": "^0.62.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-node": "^0.210.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@opsui/shared": "*",
    "@sendgrid/mail": "^8.1.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "postmark": "^4.0.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.11",
    "socket.io": "^4.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.0.3",
    "uuid": "^9.0.1",
    "web-push": "^3.6.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.450.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "2.6.9",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/web-push": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
